pkgname=incavead
pkgver=1.0
pkgrel=1
pkgdesc="xxXX0-=-0XXxx"
url="xx"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=()
optdepends=()
makedepends=('git' 'cmake' 'ragel')
conflicts=()
replaces=()
backup=()
source=("git+https://code.google.com/p/incavead/")
md5sums=('SKIP')

build() {
  cd "${srcdir}/incavead"
  mkdir build
  cd build
  cmake ..
  make
}

package() {
  cd "${srcdir}/incavead"
  mkdir -p "$pkgdir/opt/games/incavead/"
  install -Dm644 *.cfg "$pkgdir/opt/games/incavead/"
  install build/incavead "$pkgdir/opt/games/incavead/"
}

